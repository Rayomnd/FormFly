<%= render 'share/header' %>

<ol style="position:absolute; left:100px; top:150px;">
<% @posts.each do |post| %>
	<li>
		<%= image_tag post.images.first.data.thumb("200x>").url %> 
		<strong><%= link_to post.title,  post_path(post) %></strong>
		<%= link_to "edit",  edit_post_path(post) %>
	</li>
<% end %>
</ol>

<div>
	<%= link_to "New Post", new_post_path %>
</div>